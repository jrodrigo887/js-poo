{
    "root": true,
    "parser": "babel-eslint",
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "semi": ["error", "always"],
        
        "space-in-parens": ["error", "always"],
        "camelcase": "warn",
        "no-use-before-define": ["error", { "functions": true, "classes": true }],
        "spaced-comment": ["error", "always", { "line": { "exceptions": ["-"] } }]

    }
}
